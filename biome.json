{
    "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
    "organizeImports": {
      "enabled": true
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true
      }
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 100
    },
    "javascript": {
      "formatter": {
        "quoteStyle": "single",
        "trailingComma": "es5",
        "semicolons": "always"
      }
    },
    "files": {
      "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx"]
    },
    "vcs": {
      "enabled": true,
      "clientKind": "git",
      "useIgnoreFile": true
    }
  }