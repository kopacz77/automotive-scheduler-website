{
  "buildCommand": "pnpm build",
  "outputDirectory": "build", 
  "framework": "create-react-app",
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    {
      "source": "/admin",
      "destination": "/index.html"
    },
    {
      "source": "/admin/(.*)",
      "destination": "/index.html"  
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}